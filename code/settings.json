{
  // color theme
  "workbench.colorTheme": "Gruvbox Dark Hard",
  // icon theme
  "workbench.iconTheme": "material-icon-theme",
  // font
  "editor.fontFamily": "'JetBrains Mono', 'JetBrainsMono Nerd Font'",
  "editor.fontLigatures": true,
  // font size
  "editor.fontSize": 16,
  // word highlight
  "editor.occurrencesHighlight": "off",
  // menu bar
  "window.menuBarVisibility": "hidden",
  // minimap
  "editor.minimap.enabled": false,
  // sticky scroll code
  "editor.stickyScroll.enabled": false,
  // smooth
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "smooth",
  // line height
  "editor.lineHeight": 1.6,
  // terminal
  "terminal.integrated.fontFamily": "'JetBrains Mono', 'JetBrainsMono Nerd Font'",
  "terminal.integrated.fontSize": 15,
  // rule
  "editor.rulers": [80, 120],
  // startup
  "workbench.startupEditor": "none",
  // activity bar
  "workbench.activityBar.location": "bottom",
  "window.customTitleBarVisibility": "never",
  // error lens
  "errorLens.messageTemplate": "â–  $message",
  // vim
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": false,
  "vim.hlsearch": true,
  "vim.foldfix": true,
  "editor.lineNumbers": "relative",
  "vim.leader": "<space>",
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "f", "c"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["<leader>", "f", "s"],
      "commands": ["workbench.action.gotoSymbol"]
    },
    {
      "before": ["<leader>", "f", "b"],
      "commands": ["workbench.action.showEditorsInActiveGroup"]
    },
    {
      "before": ["j"],
      "after": ["j", "z", "z"]
    },
    {
      "before": ["k"],
      "after": ["k", "z", "z"]
    },
    {
      "before": ["J"],
      "after": ["5", "j", "z", "z"]
    },
    {
      "before": ["K"],
      "after": ["5", "k", "z", "z"]
    },
    {
      "before": ["n"],
      "after": ["n", "z", "z"]
    },
    {
      "before": ["N"],
      "after": ["N", "z", "z"]
    },
    {
      "before": ["<leader>", "_"],
      "commands": [":split"]
    },
    {
      "before": ["<leader>", "|"],
      "commands": [":vsplit"]
    },
    {
      "before": ["<leader>", "p"],
      "after": ["\"", "+", "p"]
    },
    {
      "before": ["<leader>", "Enter"],
      "commands": [":nohlsearch"]
    },
    {
      "before": ["g", "d"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["<leader>", "f", "m"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["<leader>", "h"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["<leader>", "p"],
      "after": ["\"", "+", "p"]
    },
    {
      "before": ["<leader>", "y"],
      "after": ["\"", "+", "y"]
    },
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    }
  ],
  // cmake
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  // format
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[csharp]": {
    "editor.defaultFormatter": "csharpier.csharpier-vscode"
  }
}
